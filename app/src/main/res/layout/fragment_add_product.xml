<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.AddTagFragment"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/custom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:background="@color/primaryColor"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />
    <EditText
        android:id="@+id/productNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nazwa"
        android:inputType="text"
        android:focusedByDefault="true"
        android:maxLength="100"/>

    <EditText
        android:id="@+id/productBarcodeEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Kod kreskowy"
        android:inputType="text"
        android:focusedByDefault="true"
        android:maxLength="100"/>
    <TextView
        android:id="@+id/view_add_recipe_ingredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ZdjÄ™cie:"
        android:textColor="#16B60A"
        android:textSize="24sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_recipes"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Galeria"
            android:layout_marginRight="35dp"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButton_open_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/open_camera_view_button"
            android:src="@android:drawable/ic_menu_camera"
            android:layout_gravity="center"
            app:maxImageSize="50dp"
            android:layout_marginRight="20dp"
            />

    </LinearLayout>
    <Button
        android:id="@+id/addProductButton"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="Dodaj"/>


</LinearLayout>